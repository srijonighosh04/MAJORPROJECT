<style>
.btn-search{
    background-color: #fe424d;
    color: #fff;
}
</style>
<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    <button 
      class="navbar-toggler" 
      type="button" 
      data-bs-toggle="collapse" 
      data-bs-target="#navbarNavAltMarkup"> 
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav me-auto">
        <a class="nav-link" href="/listings"><b>Explore</b></a>
        <% if (currentUser) { %>
          <a class="nav-link" href="/listings/new"><b>Add New Listing</b></a>
        <% } %>
      </div>
      <div class="d-flex" role="search">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
      </div>
      <div class="navbar-nav ms-auto">
        <% if (!currentUser) { %>
          <a class="nav-link" href="/users/login"><b>Login</b></a>
          <a class="nav-link" href="/users/register"><b>Signup</b></a>
        <% } else { %>
          <span class="nav-link disabled">Hi, <%= currentUser.username %>!</span>
