<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <h3>Create New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      
      <div class="mb-3">
        <label for="title" class="form-label">Title</label> 
        <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required>
        <div class="valid-feedback">Title Looks Good!</div>
        <div class="invalid-feedback">Please add a valid title.</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label> 
        <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
        <div class="valid-feedback">Description Looks Good!</div>
        <div class="invalid-feedback">Please add a valid description</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label> 
        <input name="image" type="file" class="form-control">
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price</label> 
        <input name="listing[price]" placeholder="Enter price" type="text" class="form-control" required>
        <div class="valid-feedback">Looks Good!</div>
        <div class="invalid-feedback">Please add a valid price</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="country" class="form-label">Country</label> 
          <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Please add a valid country name.</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="location" class="form-label">Location</label> 
          <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Please add a valid location.</div>
        </div>
      </div>

      <button class="btn btn-dark add-btn">Create Listing</button>
    </form>
  </div>
</div>
